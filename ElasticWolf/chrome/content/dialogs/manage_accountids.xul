<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://ew/locale/ew.dtd">

<dialog id="ew.dialog.manageaccountids" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  buttons="extra2,extra1,cancel" ondialogcancel="return true;"
  ondialogextra1="ew_accountIdManager.saveAccount();"
  ondialogextra2="ew_accountIdManager.removeAccount();"
  buttonlabelcancel="Close" buttonlabelextra1="Add" buttonlabelextra2="Remove"
  defaultButton="extra1" buttonpack="end" buttonalign="end"
  onload="ew_accountIdManager.initDialog();" title="Manage Account IDs" >

  <script type="application/x-javascript" src="chrome://ew/content/preferences.js" />
  <script type="application/x-javascript" src="chrome://ew/content/model.js" />
  <script type="application/x-javascript" src="chrome://ew/content/utils.js" />
  <script type="application/x-javascript" src="chrome://ew/content/dialogs/manage_accountids.js" />

  <vbox flex="1">
    <tree id="ew.accountids.view"
      onselect="ew_accountIdManager.selectMapping();" flex="1" rows="5">
      <treecols>
        <treecol id="accountids.accountid" label="Account ID"
          flex="1" persist="width ordinal hidden" />
        <treecol id="accountids.displayname" label="Display Name"
          flex="1" persist="width ordinal hidden" />
      </treecols>
      <treechildren />
    </tree>
    <grid>
      <columns>
        <column />
        <column />
      </columns>
      <rows>
        <row>
          <label control="ew.accountids.accountid" value="Account ID:" />
          <textbox id="ew.accountids.accountid" size="20" />
        </row>
        <row>
          <label control="ew.accountids.displayname" value="Display Name:" />
          <textbox id="ew.accountids.displayname" size="40" />
        </row>
      </rows>
    </grid>
  </vbox>
</dialog>
