<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://ew/locale/ew.dtd">

<dialog id="ew.dialog.managecreds" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  buttons="extra2,extra1,accept,cancel" ondialogcancel="return true;"
  ondialogextra1="ew_credentialManager.saveAccount();"
  ondialogextra2="ew_credentialManager.removeAccount();"
  ondialogaccept="ew_credentialManager.switchAccount();"
  buttonlabelcancel="Close" buttonlabelextra1="Add" buttonlabelextra2="Remove" buttonlabelaccept="SwitchTo"
  defaultButton="extra1" buttonpack="start" buttonalign="start"
  onload="ew_credentialManager.initDialog();" title="Manage EC2 Credentials">

  <script type="application/x-javascript" src="chrome://ew/content/model.js" />
  <script type="application/x-javascript" src="chrome://ew/content/controller.js" />
  <script type="application/x-javascript" src="chrome://ew/content/session.js" />
  <script type="application/x-javascript" src="chrome://ew/content/preferences.js" />
  <script type="application/x-javascript" src="chrome://ew/content/utils.js" />
  <script type="application/x-javascript" src="chrome://ew/content/view_credentials.js" />
  <script type="application/x-javascript" src="chrome://ew/content/manager_credential.js" />

  <vbox flex="1">
    <tree id="ew.credentials.view" enableColumnDrag="true" onselect="ew_credentialManager.selectCredentials();" flex="1" rows="5">
      <treecols>
        <treecol id="credential.name" label="Account Name" flex="1" persist="width ordinal hidden" />
        <splitter class="tree-splitter" />
        <treecol id="credential.accessKey" label="AWS Access Key ID" flex="1" persist="width ordinal hidden" />
        <splitter class="tree-splitter" />
        <treecol id="credential.endPoint" label="Endpoint" flex="1" persist="width ordinal hidden" />
      </treecols>
      <treechildren />
    </tree>
    <grid>
      <columns>
        <column />
        <column />
      </columns>
      <rows>
        <row>
          <label control="ew.credentials.account" value="Account Name:" />
          <textbox id="ew.credentials.account" size="40" />
        </row>
        <row>
          <label control="ew.credentials.akid" value="AWS Access Key:" />
          <textbox id="ew.credentials.akid" size="40" />
        </row>
        <row>
          <label control="ew.credentials.secretkey" value="AWS Secret Access Key:" />
          <textbox id="ew.credentials.secretkey" type="password" size="40" />
        </row>
        <row>
          <label control="ew.credentials.endpoint" value="Endpoint:" />
          <menulist id="ew.credentials.endpoint" />
        </row>
      </rows>
    </grid>
  </vbox>
</dialog>
