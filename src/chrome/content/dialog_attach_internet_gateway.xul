<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE window SYSTEM "chrome://ec2ui/locale/ec2ui.dtd">

<dialog id="ec2ui.dialog.attachvpngateway" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" buttons="accept,cancel"
    ondialogaccept="return attach();" ondialogcancel="return true;" onload="init();" title="Attach Internet Gateway to VPC" buttonlabelaccept="Attach">

    <script type="application/x-javascript" src="chrome://ec2ui/content/model.js" />
    <script>
    function attach() {
        this.retVal.vpcid = document.getElementById("ec2ui.attachigw.vpcid").value.trim();
        this.retVal.igwid = document.getElementById("ec2ui.attachigw.igwid").value.trim();
        this.retVal.igwnew = document.getElementById("ec2ui.attachigw.new").checked;
        this.retVal.ok = true;
        return true;
    }

    function init() {
        this.session = window.arguments[0];
        this.retVal = window.arguments[1];

        var vpcMenu = document.getElementById("ec2ui.attachigw.vpcid");
        var vpcs = this.session.model.getVpcs();
        var selected = 0;
        for (var i in vpcs) {
            vpcMenu.appendItem(vpcs[i].id + " (" + vpcs[i].cidr + ")" + (vpcs[i].tag == null ? '' : " [" + vpcs[i].tag + "]"), vpcs[i].id)
            if (vpcs[i].id == this.retVal.vpcid)
                selected = i;
        }
        vpcMenu.selectedIndex = selected;

        var igwMenu = document.getElementById("ec2ui.attachigw.igwid");
        var igws = this.session.model.getInternetGateways();
        selected = 0;
        for (var i in igws) {
            igwMenu.appendItem(igws[i].toStr(), igws[i].id);
            if (igws[i].id == this.retVal.igwid)
                selected = i;
        }
        igwMenu.selectedIndex = selected;
    }

    function newigw() {
        if (document.getElementById("ec2ui.attachigw.new").checked) {
            document.getElementById("ec2ui.attachigw.igwid").removeAllItems()
        } else {
            init()
        }
    }
    </script>

    <vbox flex="1">
        <description>Instances running in VPCs require Internet Gateway</description>
        <spacer style="height: 10px" />
        <grid flex="1">
            <columns>
                <column />
                <column />
            </columns>
            <rows>
                <row>
                    <label control="ec2ui.attachigw.vpcid" value="VPC: " />
                    <hbox>
                        <menulist id="ec2ui.attachigw.vpcid" />
                    </hbox>
                </row>
                <groupbox orient="vertical" flex="1">
                    <caption label="Internet Gateway" />
                    <grid flex="1">
                    <columns>
                        <column />
                        <column />
                    </columns>
                    <rows>
                    <row>
                        <label control="ec2ui.attachigw.igwid" value="Select existing: " />
                        <menulist id="ec2ui.attachigw.igwid" />
                    </row>
                    <row>
                        <label control="ec2ui.attachigw.new" value="Create new: " />
                        <checkbox id="ec2ui.attachigw.new" checked="false" oncommand="newigw();" />
                    </row>
                    </rows>
                    </grid>
               </groupbox>
            </rows>
        </grid>
    </vbox>
</dialog>
